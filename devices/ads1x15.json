{
  "category": "A/D Converters",
  "predefined": true,
  "devices": [
    {
      "id": 700,
      "name": "ADS1x15 ADC",
      "input": "boolean",
      "deviceClass": "ads1x15",
      "module": "./ads1x15",
      "outputs": [
        {
          "name": "values[3].voltage",
          "desc": "Voltage",
          "maxSamples": 10
        },
        {
          "name": "all",
          "desc": "All values",
          "maxSamples": 10
        }
      ],
      "options": [
        {
          "dataType": "panel",
          "field": {
            "type": "div",
            "style": { "display": "inline-block" }
          },
          "options": [
            {
              "bind": "options.name",
              "dataType": "string",
              "default": "",
              "field": {
                "type": "inputField",
                "required": false,
                "bind": "options.name",
                "labelText": "Name",
                "inputAttrs": {
                  "maxLength": 24,
                  "style": { "width": "16rem" }
                },
                "style": { "display": "block" }
              }
              
            },
            {
              "dataType": "panel",
              "field": {
                "type": "fieldset",
                "legend": "Readings",
                "cssClass": "i2cReadingValues",
                "style": {
                  "display": "block",
                  "verticalAlign": "top"
                }
              },
              "options": [
                {
                  "field": {
                    "type": "staticField",
                    "labelText": "Channel 1",
                    "binding": "values.channels[0].psi",
                    "dataType": "number",
                    "fmtMask": "#,##0.0###",
                    "emptyMask": "---.-",
                    "style": {
                      "display": "block",
                      "fontSize": ".8rem",
                      "lineHeight": "1.2"
                    },
                    "labelAttrs": {
                      "style": { "width": "5rem" }
                    },
                    "units": "psi"
                  }
                },
                {
                  "field": {
                    "type": "staticField",
                    "labelText": "Channel 2",
                    "binding": "values.channels[1].psi",
                    "dataType": "number",
                    "fmtMask": "#,##0.0###",
                    "emptyMask": "---.-",
                    "style": {
                      "display": "block",
                      "fontSize": ".8rem",
                      "lineHeight": "1.2"
                    },
                    "labelAttrs": {
                      "style": { "width": "5rem" }
                    },
                    "units": "psi"
                  }
                },
                {
                  "field": {
                    "type": "staticField",
                    "labelText": "Channel 3",
                    "binding": "values.channels[2].psi",
                    "dataType": "number",
                    "fmtMask": "#,##0.0###",
                    "emptyMask": "---.-",
                    "style": {
                      "display": "block",
                      "fontSize": ".8rem",
                      "lineHeight": "1.2"
                    },
                    "labelAttrs": {
                      "style": { "width": "5rem" }
                    },
                    "units": "psi"
                  }
                },
                {
                  "field": {
                    "type": "div",
                    "attrs": { "data-bindingcontext": "calibration" }
                  },
                  "options": [
                    {
                      "field": {
                        "type": "staticField",
                        "labelText": "Channel 4",
                        "binding": "values.channels[3].psi",
                        "dataType": "number",
                        "fmtMask": "#,##0.0###",
                        "emptyMask": "---.-",
                        "style": {
                          "display": "block",
                          "fontSize": ".8rem",
                          "lineHeight": "1.2"
                        },
                        "labelAttrs": {
                          "style": { "width": "5rem" }
                        },
                        "units": "psi"
                      }
                    },
                    {
                      "field": {
                        "type": "staticField",
                        "labelText": "Voltage",
                        "binding": "values.channels[3].voltage",
                        "dataType": "number",
                        "fmtMask": "#,##0.####",
                        "emptyMask": "---",
                        "style": {
                          "display": "block",
                          "marginLeft": "1rem",
                          "fontSize": ".8rem",
                          "lineHeight": "1.2"
                        },
                        "labelAttrs": {
                          "style": { "width": "4.5rem" }
                        },
                        "inputAttrs": {
                          "style": {
                            "width": "2.5rem",
                            "textAlign": "right"
                          }
                        },
                        "units": "v"
                      }
                    },
                    {
                      "field": {
                        "type": "staticField",
                        "labelText": "Offset",
                        "binding": "options.channels[3].inducerOffset",
                        "dataType": "number",
                        "fmtMask": "#,##0.####",
                        "emptyMask": "---",
                        "style": {
                          "display": "block",
                          "marginLeft": "1rem",
                          "fontSize": ".8rem",
                          "lineHeight": "1.2"
                        },
                        "labelAttrs": {
                          "style": { "width": "4.5rem" }
                        },
                        "inputAttrs": {
                          "style": {
                            "width": "2.5rem",
                            "textAlign": "right"
                          }
                        },
                        "units": "v"
                      }
                    },
                    {
                      "field": {
                        "type": "staticField",
                        "labelText": "PSI per Volt",
                        "binding": "options.channels[3].psiPerVolt",
                        "dataType": "number",
                        "fmtMask": "#,##0.####",
                        "emptyMask": "---",
                        "style": {
                          "display": "block",
                          "marginLeft": "1rem",
                          "fontSize": ".8rem",
                          "lineHeight": "1.2"
                        },
                        "labelAttrs": {
                          "style": { "width": "4.5rem" }
                        },
                        "inputAttrs": {
                          "style": {
                            "width": "2.5rem",
                            "textAlign": "right"
                          }
                        },
                        "units": "psi"
                      }
                    }

                  ]
                }
              ]
            }
          ]
        },
        
        {
          "dataType": "panel",
          "field": {
            "type": "fieldset",
            "legend": "Channels",
            "style": {
              "display": "inline-block",
              "verticalAlign": "top",
              "marginLeft": ".5rem"
            },
            "cssClass": "i2cReadingValues",
            "attrs": { "data-bindingcontext": "channels" }
          },
          "options": [
            {
              "field": {
                "type": "div",
                "style": { "width": "21rem" },
                "html": "Enable each channel you are going to monitor. Each channel must be enabled individually.<hr style=\"margin:2px\"></hr>Only the channels you enable will be available for feeds.",
                "cssClass": "script-advanced-instructions"
              }
            },
            {
              "field": {
                "type": "panel",
                "class": "pnlI2cADC",
                "adcTypes": [
                  {
                    "name": "ads1115",
                    "desc": "ADS1115 16-bit",
                    "options": {
                      "maxChannels": 4
                    }
                  },
                  {
                    "name": "ads1105",
                    "desc": "ADS1105 12-bit",
                    "options": {
                      "maxChannels": 4
                    }
                  }
                ]
              }
            }
          ]
        }
      ],
      "interfaces": [ "i2c" ]
    }
  ]
}