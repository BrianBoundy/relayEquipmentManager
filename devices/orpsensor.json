{
  "category": "Chemistry Sensors",
  "predefined": true,
  "devices": [
    {
      "id": 150,
      "name": "Atlas EZO-ORP",
      "deviceClass": "AtlasEZOorp",
      "module": "./AtlasEZO",
      "readings": {
        "orp": {
          "label": "ORP",
          "interval": {
            "min": 2000,
            "max": 99000,
            "default": 10000
          }
        }
      },
      "options": [
        {
          "dataType": "panel",
          "field": {
            "type": "div",
            "style": { "display": "inline-block" }
          },
          "options": [
            {
              "bind": "options.name",
              "dataType": "string",
              "default": "",
              "field": {
                "type": "inputField",
                "required": false,
                "bind": "options.name",
                "labelText": "Name",
                "inputAttrs": {
                  "maxLength": 16,
                  "style": { "width": "16rem" }
                },
                "style": { "display": "block" }
              }
            },
            {
              "field": {
                "type": "div"
              },
              "options": [
                {
                  "dataType": "boolean",
                  "default": false,
                  "field": {
                    "type": "checkbox",
                    "bind": "options.isProtocolLocked",
                    "labelText": "Lock Protocol"
                  }
                },
                {
                  "dataType": "boolean",
                  "default": false,
                  "field": {
                    "type": "checkbox",
                    "bind": "options.ledEnabled",
                    "labelText": "LED Enabled",
                    "style": { "marginLeft": "1rem" }
                  }
                }
              ]
            },
            {
              "dataType": "panel",
              "field": {
                "type": "fieldset",
                "legend": "Device Info",
                "style": {
                  "display": "block",
                  "verticalAlign": "top"
                }
              },
              "options": [
                {
                  "field": {
                    "type": "staticField",
                    "labelText": "Firmware",
                    "binding": "options.deviceInfo.firmware",
                    "style": {
                      "display": "block",
                      "fontSize": ".8rem",
                      "lineHeight": "1.2"
                    },
                    "labelAttrs": {
                      "style": { "width": "5rem" }
                    },
                    "cssClass":  "i2cDeviceInformation"
                  }
                },
                {
                  "field": {
                    "type": "div",
                    "style": { "lineHeight": ".8" }
                  },
                  "options": [
                    {
                      "field": {
                        "type": "staticField",
                        "labelText": "Last Restart",
                        "binding": "options.status.lastRestart.name",
                        "style": {
                          "fontSize": ".8rem",
                          "lineHeight": "1.2"
                        },
                        "labelAttrs": {
                          "style": { "width": "5.5rem" }
                        }
                      }
                    },
                    {
                      "field": {
                        "type": "staticField",
                        "labelText": "-",
                        "binding": "options.status.lastRestart.desc",
                        "style": {
                          "fontSize": ".8rem",
                          "lineHeight": "1.2"
                        }
                      }
                    }

                  ]
                },
                {
                  "field": {
                    "type": "staticField",
                    "labelText": "Vcc Voltage",
                    "binding": "options.status.vcc",
                    "style": {
                      "display": "block",
                      "fontSize": ".8rem",
                      "lineHeight": "1.2"
                    },
                    "dataType": "number",
                    "fmtMask": "#,##0.0##",
                    "inputAttrs": {
                      "style": {
                        "width": "2.2em",
                        "textAlign": "right"
                      }
                    },
                    "labelAttrs": {
                      "style": { "width": "5.5rem" }
                    },
                    "units": "volts"
                  }
                }
              ]
            },
            {
              "dataType": "panel",
              "field": {
                "type": "fieldset",
                "legend": "Readings",
                "cssClass": "i2cReadingValues",
                "style": {
                  "display": "block",
                  "verticalAlign": "top"
                }
              },
              "options": [
                {
                  "field": {
                    "type": "staticField",
                    "labelText": "Probe ORP",
                    "binding": "values.orp",
                    "style": {
                      "display": "block",
                      "fontSize": ".8rem",
                      "lineHeight": "1.2"
                    },
                    "units": "mV",
                    "labelAttrs": {
                      "style": { "width": "5rem" }
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "dataType": "panel",
          "field": {
            "type": "fieldset",
            "legend": "Calibration",
            "style": {
              "display": "inline-block",
              "verticalAlign": "top",
              "marginLeft": ".5rem"
            },
            "attrs": { "data-bindingcontext": "calibration" }
          },
          "options": [
            {
              "field": {
                "type": "div",
                "style": { "width": "21rem" },
                "html": "Calibrate the probe by immersing it into calibration ORP/redox solution that is approx 25&deg;C/77&deg;F.  Set the solution rating in mV in the field next to the calibrate button.<hr style=\"margin:2px\"></hr>Wait a couple of minutes for the ORP reading to stabilize then press the calibrate button.",
                "cssClass": "script-advanced-instructions"
              }
            },
            {
              "dataType": "panel",
              "field": {
                "type": "div",
                "style": {
                  "display": "inline-block",
                  "verticalAlign": "top"
                }
              },
              "options": [
                {
                  "dataType": "panel",
                  "field": {
                    "type": "div",
                    "attrs": { "data-bindingcontext": "calibrate" }
                  },
                  "options": [
                    {
                      "field": {
                        "type": "actionButton",
                        "text": "Calibrate",
                        "icon": "<i class=\"fas fa-cogs\"></i>",
                        "style": { "width": "7rem" }
                      },
                      "fieldEvents": {
                        "click": {
                          "type": "putservice",
                          "path": "`/config/i2c/${device.busNumber}/${device.address}/deviceCommand/calibrate`",
                          "message": "Calibrating Probe...",
                          "callContext": "calibrate",
                          "resultContext": "calibration"
                        }
                      }
                    },
                    {
                      "default": 225,
                      "field": {
                        "binding": "options.calPoint",
                        "type": "valueSpinner",
                        "labelText": "Redox Value",
                        "min": 0,
                        "max": 800,
                        "labelAttrs": {
                          "style": {
                            "display": "none"
                          }
                        },
                        "units": "mV",
                        "style": { "marginLeft": ".25rem" }
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "panel",
              "field": {
                "type": "div",
                "style": {
                  "display": "inline-block",
                  "verticalAlign": "top",
                  "marginLeft": "1rem"
                }
              },
              "options": [
                {
                  "field": {
                    "type": "div",
                    "html": "Calibrated",
                    "style": {
                      "whiteSpace": "nowrap",
                      "fontSize": ".8rem"
                    }
                  }
                },
                {
                  "field": {
                    "type": "div",
                    "binding": "options.calibrationMode",
                    "style": {
                      "whiteSpace": "nowrap",
                      "fontSize": "1.4rem",
                      "textAlign": "center"
                    }
                  }
                }
              ]
            }
          ]
        }
      ],
      "interfaces": [ "i2c" ]
    }
  ]
}